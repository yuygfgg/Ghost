# Database
GHOST_DB_PATH=var/db/ghost.db

# Public site repo configuration
GHOST_SITE_REPO_URL=git@github.com:example/ghost-site-public.git
GHOST_SITE_WORKDIR=var/site-workdir

# Pages deploy (optional)
# Default behavior:
# - GHOST_DEPLOY_MODE=standard  -> push to Pages after each build (when remote is configured)
# - GHOST_DEPLOY_MODE=integrated -> do not push (served locally by ghost-server)
GHOST_PAGES_REMOTE_URL=
GHOST_PAGES_BRANCH=gh-pages
GHOST_PAGES_CNAME=
GHOST_PAGES_FORCE=0
GHOST_PAGES_GIT_USER_NAME=ghost-bot
GHOST_PAGES_GIT_USER_EMAIL=ghost-bot@users.noreply.github.com

# Crypto / auth
GHOST_TOKEN_SALT=ghost-static-salt
GHOST_TOKEN_PEPPER=change-me
GHOST_AGE_RECIPIENT=

# Runtime
GHOST_API_LOG_LEVEL=INFO
GHOST_DEPLOY_MODE=standard
GHOST_BUILD_INTERVAL_MIN=60
GHOST_DHT_SCAN_INTERVAL_HR=24

# DHT health scan tuning (optional)
# GHOST_DHT_SAMPLE_SIZE=20
# GHOST_DHT_TIMEOUT_S=20

# Cover localization (optional)
# GHOST_COVER_FETCH_TIMEOUT_S=15

# Magnet metadata probing (optional)
# Backend choices:
# - libtorrent (default): requires python package `libtorrent`
# - mock: deterministic fake metadata (tests/dev only)
# GHOST_MAGNET_METADATA_BACKEND=libtorrent
# GHOST_MAGNET_METADATA_TIMEOUT_S=25
# GHOST_MAGNET_METADATA_DIR=var/magnet-metadata
# GHOST_MAGNET_TMP_DIR=var/magnet-tmp
